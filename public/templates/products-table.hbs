{{#if products.length }}
    <table class="products-table">
        <thead>
            <tr>
                <th scope="column">Nombre</th>
                <th scope="column">Precio</th>
                <th scope="column">Descripci√≥n</th>
                <th scope="column">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr class="products-table__item" data-id="{{id}}">
                    <td class="products-table__id">{{id}}</td>
                    <td class="products-table__name">{{name}}</td>
                    <td class="products-table__price">{{price}}</td>
                    <td class="products-table__description">{{shortDescription}}</td>
                    <td>
                        <button class="btn-delete">Borrar</button>
                        <button class="btn-edit">Editar</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td class="products-table__quantity" colspan="5">Se encontraron {{products.length}} productos</td>
            </tr>
        </tfoot>
    </table>
{{else}}
    <p class="products-table__quantity">No se encontraron productos</p>
{{/if}}